<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  x:DataType="xct:Popup"
             xmlns:xct="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
             x:Class="HabitTracking.Popups.NamePopup"
           Size="300,180">
        <StackLayout Padding="5">
            <Label Text="Category Name" TextColor="DeepPink" FontSize="Large" FontAttributes="Bold"></Label>
            <Frame CornerRadius="10" BorderColor="DeepPink">
                <Entry x:Name="nameEnt" Placeholder="New category"></Entry>
            </Frame>
            <Button x:Name="btnCreate" Text="OK" 
                    BackgroundColor="Transparent"  FontAttributes="Bold" TextColor="DeepPink"
                    Clicked="btnCreate_Clicked"></Button>
        </StackLayout>
</xct:Popup>